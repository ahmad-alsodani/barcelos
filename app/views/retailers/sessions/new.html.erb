<section>

<header>
  <h1>Retailer Login</h1>
</header>

<div class="form">
  
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

    <div class="pair">
      <div class="label">
        <%= f.label :email %>
      </div>
      <div class="field">
        <%= f.text_field :email %>
      </div>
    </div>

    <div class="pair">
      <div class="label">
        <%= f.label :password %>
      </div>
      <div class="field">
        <%= f.password_field :password %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="pair">
      <div class="field">
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      </div>
    </div>
    <% end -%>

    <div class="submit">
      <%= f.submit "Sign in" %>
    </div>

  <% end %>

  <%= render "retailers/links" %>
  
</div>

</section>